{
  "name": "radhagsareees-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "E-commerce platform for Radha G Sarees with virtual try-on",
  "scripts": {
    "build": "turbo run build",
    "dev": "npm run validate-env && turbo run dev",
    "dev:unsafe": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:pull": "turbo run db:pull",
    "db:seed": "turbo run db:seed",
    "supabase:install": "pnpm add @supabase/supabase-js",
    "supabase:setup": "node scripts/setup-supabase.js",
    "validate-env": "node scripts/validate-env.js",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "analyze:bundle:web": "node scripts/analyze-bundle.js --app=web",
    "analyze:bundle:admin": "node scripts/analyze-bundle.js --app=admin",
    "analyze:bundle:ci": "node scripts/analyze-bundle.js --ci",
    "performance:check": "node scripts/performance-budget-check.js",
    "performance:lighthouse": "@lhci/cli autorun",
    "web:dev": "npm run validate-env && cd apps/web && npm run dev",
    "admin:dev": "npm run validate-env && cd apps/admin && npm run dev",
    "setup": "pnpm install && npm run db:generate && npm run validate-env"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^1.10.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.0",
    "dotenv-safe": "^9.1.0",
    "gzip-size": "^7.0.0",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "node-mocks-http": "^1.17.2",
    "supabase": "^2.58.5",
    "ts-jest": "^29.4.5",
    "turbo": "^1.10.12",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "@prisma/client": "5.22.0",
      "prisma": "5.22.0"
    }
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.553.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.0",
    "zod": "^3.22.4"
  }
}
