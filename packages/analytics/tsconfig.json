{
  "extends": "../config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/adapters/*.ts",
    "src/hooks/*.ts",
    "src/utils/*.ts",
    "src/types/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}